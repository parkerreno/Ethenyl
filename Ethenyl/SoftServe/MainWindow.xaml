<Window x:Class="SoftServe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftServe"
        mc:Ignorable="d"
        Title="Soft Serve" Height="720" Width="1280">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Image Source="{Binding CurrentAlbumArt}"></Image>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock Text="{Binding CurrentSong, FallbackValue='Failed to bind trackname'}" FontFamily="Segoe UI Semibold" FontSize="48"></TextBlock>
                <TextBlock Text="{Binding CurrentArtist, FallbackValue='Failed to bind artistname'}" FontSize="26"></TextBlock>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Vertical">
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="" FontFamily="Segoe MDL2 Assets" FontSize="72" Margin="6" Padding="6" Click="Back_Click"/>
                <Button Content="{Binding PlayButton, FallbackValue=''}" FontFamily="Segoe MDL2 Assets" FontSize="72" Margin="6" Padding="6" Click="PlayPauseClick"/>
                <Button Content="" FontFamily="Segoe MDL2 Assets" FontSize="72" Margin="6" Padding="6" Click="Forward_Click"/>
            </StackPanel>
        <ProgressBar IsIndeterminate="{Binding ProgressInd}" Value="{Binding TrackStatus}" Maximum="{Binding TrackMax}" LargeChange="1" SmallChange="0.1"/>
        </StackPanel>
        <ListView Grid.Row="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding QueueText}">ERROR BINDING</TextBlock>
                        <Button Click="QueueDelete_Clicked"></Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
